	contract SetState
		down setOn
		down setOff
		
	contract Echo
		down saySomething (String msg)
		up   echoIt (String msg)

	card ControlledCard
		state
			Boolean sayHello
			
		template
			'hello' : (styleIf 'show' sayHello)
				click => echoHello
		
		implements SetState
			setOn
				sayHello <- true 
			setOff
				sayHello <- false 

		implements Echo e
			saySomething msg
				<- e.echoIt msg

		event echoHello ev
			<- e.echoIt "hello clicked"
			
		styleIf style b
			if (b) = style
			else = ''
		