		template
			#header : 'nav-bar'
				. : 'w-container'
					. : 'w-row'
						. : 'w-col' 'w-col-4' 'brand-column'
							#img @src='../images/chaddy.jpg' @width='32' : 'logo'
							. : 'company'
								'Chaddy'
						#nav : 'w-col' 'w-col-8' 'nav-column'
							$navItem 'dashboard' 'D' 'dashboard'
							$navItem 'my queues' 'Q' 'myqueues'
							$navItem 'organization and teams' 'T' 'teams'
							#a  @title='logout' : 'nav-link'
								'X'
								click => logout
							
		template navItem title label key
			#a  @title=title : (selectedTab key) 'nav-link'
				label
				click => switchTo key
		
		event switchTo (String name) ev
			currentTab <- name
			<- changer.change name

		event logout
			<- creds.logout

		implements TabChanger changer
			changed to
				currentTab <- to

