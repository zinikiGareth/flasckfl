	struct CounterObj
		Number inc <- 0

	contract Init
		down load (Any obj)
  
	contract Timer
		up requestTicks (OnCounter h) (Number msInterval) 
  
	contract OnCounter
		down onTick 
  
	card CounterCard
		state	
			Number counter <- 0

		template
			counter : format

		implements org.cardstack.Init
			load (CounterObj c)
				<- timer.requestTicks (OnCounter c.inc) 1000
      
		implements Timer timer
  
		handler OnCounter inc 
			onTick
				counter <- counter + inc