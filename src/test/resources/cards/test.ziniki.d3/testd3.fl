	card TestCard
		state
			List data <- [ 5, 8, 2, 16 ]
			
		template
			.
				.
					#a
						'click here'
						click => rejig
				.
					#svg @width='400' @height='250'
						$chart
			
		d3 chart data elt
			pattern "rect"
				layout
					x = 22 * elt.idx
					y = 200 - 10 * elt.data
					fill = 'red'
					width = 20
					height = 10*elt.data
					
				enter
					<- D3Action "append" ["rect"]
					
			pattern "text"
				layout
					text = elt.data
					textAnchor = 'middle'
					x = 22 * elt.idx + 10
					y = 200 - 10 * elt.data + 14
					width = 20
					height = 10*elt.data
					fill = 'black'
					fontFamily = 'sans-serif'
					fontSize = '11px'

				enter
					<- D3Action "append" ["text"]
					
		event rejig ev
			data <- [4, 7, 11, 9]