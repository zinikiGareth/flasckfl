	struct CounterObj
		Number inc <- 0

	contract Timer
		up requestTicks (OnCounter h) (Number msInterval) 
  
	contract OnCounter
		down onTick 
  
	card CounterCard
		state	
			Number counter <- 0
			Timer t

		template	
			counter : 'format'

		implements org.ziniki.KeyValue
			value (CounterObj c)
				<- timer.requestTicks (CountUp c.inc) 1000

.				<- timer.cancel t
# should be: (capturing handle)				<- timer.requestTicks (CountUp c.inc) 1000 -> t

		implements Timer timer
  
		handler OnCounter CountUp inc 
			onTick
				counter <- counter + inc