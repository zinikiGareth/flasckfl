	struct CounterObj
		Number inc <- 0

	card CounterCard
		state	
			Number counter <- 0
			org.flasck.Timer t

		template	
			counter : 'format'

		platform android
			launcher
			label "Counter"

		implements org.flasck.Init
			update (CounterObj c)
				<- timer.requestTicks (CountUp c.inc) 1000

.				<- timer.cancel t
# should be: (capturing handle)				<- timer.requestTicks (CountUp c.inc) 1000 -> t

		implements org.flasck.Timer timer
  
		handler org.flasck.TimerCallback CountUp inc 
			onTick
				counter <- counter + inc