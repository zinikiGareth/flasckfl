	struct CounterObj
		Number inc <- 0

	card CounterCard
		state	
			Number counter <- 0
			org.ziniki.Timer t

		template	
			counter : 'format'

		implements org.ziniki.Init
			update (CounterObj c)
				<- timer.requestTicks (CountUp c.inc) 1000

.				<- timer.cancel t
# should be: (capturing handle)				<- timer.requestTicks (CountUp c.inc) 1000 -> t

		implements org.ziniki.Timer timer
  
		handler org.ziniki.TimerCallback CountUp inc 
			onTick
				counter <- counter + inc